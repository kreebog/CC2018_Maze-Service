doctype html
html(lang="en")
    include head.pug

    br
    div(class='container text-center')
        h1 Maze Service - #{title}
        br
        #mazes
        if mazes.length > 0
            table(class='table table-striped table-dark table-hover' style='color:antiquewhite')
                thead
                    tr
                        th(scope='col') Height
                        th(scope='col') Width
                        th(scope='col') Seed
                        th(scope='col') Actions
                tbody
                    each maze in mazes
                        tr
                            td= maze.height
                            td= maze.width
                            td= maze.seed
                            td
                                a(href='/view/' + maze.height + ':' + maze.width + ':' + maze.seed) view
                                | &nbsp;&nbsp;|&nbsp;&nbsp;
                                a(href='/get/' + maze.height + ':' + maze.width + ':' + maze.seed) json
                                | &nbsp;&nbsp;|&nbsp;&nbsp;
                                a(href='/delete/' + maze.height + ':' + maze.width + ':' + maze.seed) delete
        else
            h3 No mazes found in the database.
    include foot.pug